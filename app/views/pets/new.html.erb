<section>
  <div class="header">
    <div class="title"><a class="back-button" href="/">&lt;</a>Report your lost pet</div>
  </div>
  <div id="report-lost-container">
    <%= simple_form_for @pet do |f| %>
      <div>
        <%= f.label :pet_type %>
        <%= f.select :pet_type, ['Dog', 'Cat'] %>
      </div>

      <div>
        <%= f.input :breed %>
        <%= f.input :name %>
      </div>

      <div>
        <%= f.label :sex %>
        <%= f.select :sex, ['Male', 'Female'] %>
      </div>

      <div>
        <%= f.input :color %>
        <%= f.input :address %>
      </div>

      <div>
        <%= f.input :age, as: :numeric %>
      </div>

      <div class="form-group">
        <%= f.label :date_seen, "Date spotted:" %><br />
        <%= f.date_field :date_seen %>
      </div>

      <div>
        <%= f.input :note %>
        <%# file_field_tag('item_attached_assets_asset', multiple: true, name: "item[attached_assets_attributes][][asset]") %>
        <%= f.input :images %>
      </div>

      <div>
        <%= f.hidden_field :latitude, class: "lat" %>
        <%= f.hidden_field :longitude, class: "lng" %>
      </div>

      <%= f.submit class: "btn btn-default" %>
    <% end %>
  </div>
</section>
