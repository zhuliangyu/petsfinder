<% if message.body.present? %>
  <div class=container>
    <div class="row">
      <div class="well well-sm col-sm-3"  id= "<%= dom_id(message) %>">
        <%= message.body %>
        <%= link_to "Delete", @message, remote: true, method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>
<% end %>
